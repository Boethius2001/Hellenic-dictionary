<%- include('partials/head.ejs')%>
<body>
    <div class = "UpperPage">
        <h1>Hellenic Dictionary</h1>
        <a href="/about">
            <h1>About</h1>
        </a>
        <label><h1>Search</h1></label>
        <input type="search" placeholder="Search" id="SearchElement">
        <button onclick="perform_search()">Search</button>
    </div>

    <hr style="clear: left;">
    
    <div class = "MenuRight">
        <div class="box1">
        </div>
    </div>
    
    <div class="OutPut">
        <div class="OutPutText">
            <h1 id="TitleID"> <b><%- title %></b></h1>
            <p id="ExpID" style="font-size: 2em;"> <%- description %></p>
        </div>
    </div>

    <script src="/src/search.js"></script>
    <script>
        function perform_search(){
            const search_input = document.getElementById('SearchElement').value;
            if(search_input.length != 0){
                window.location.href = `/search/${search_input}`;
            }
            else{
                window.location.href = `/search`;
            }
        }
    </script>


</body>
</html>